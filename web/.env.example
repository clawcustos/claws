# ===========================================
# Claws Environment Configuration
# ===========================================

# Database (Neon/Postgres)
DATABASE_URL="postgresql://user:pass@host/db?sslmode=require"

# Contract (Base mainnet)
CLAWS_CONTRACT_ADDRESS="0x..."

# ===========================================
# Verification System
# ===========================================

# Backend signer (generates proofs for contract)
# This wallet must be set as verifier in the contract
# Generate: cast wallet new
VERIFIER_PRIVATE_KEY="0x..."

# ===========================================
# NextAuth / Authentication
# ===========================================

NEXTAUTH_URL="http://localhost:3000"
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"

# ===========================================
# Twitter/X API (from developer.twitter.com)
# ===========================================

# OAuth 2.0 credentials (for user login)
# App Settings > Keys and tokens > OAuth 2.0
TWITTER_CLIENT_ID="your-client-id"
TWITTER_CLIENT_SECRET="your-client-secret"

# Bearer Token (for reading tweets)
# App Settings > Keys and tokens > Bearer Token
TWITTER_BEARER_TOKEN="your-bearer-token"

# ===========================================
# Optional / Development
# ===========================================

# Skip tweet verification in development
# NODE_ENV="development"

# RPC URL (defaults to public Base RPC)
# BASE_RPC_URL="https://mainnet.base.org"
